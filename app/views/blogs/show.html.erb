<header class="py-5 bg-image-full bg-image-stripe" style="background-image: url('<%= @blog.featured_image_url %>')">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-lg-12 transparent-white">
        <h1 class="display-4 mt-5 mb-2"><%= @blog.title %></h1>
        <p class="lead mb-3"><%= @blog.teaser %></p>
        <p>
          <% @blog.tag_list.each do |tag| %>
            <%= link_to tag, tagged_path(tag: tag) %>
          <% end %>
          <br>
          <em>By <%= Spree::User.find(@blog.spree_user_id).email %> on <%= @blog.published_at.in_time_zone("America/Los_Angeles").strftime("%B %d, %Y") %></em>
        </p>
      </div>
    </div>
  </div>
</header>


<% if current_spree_user && current_spree_user.admin? %>
<section class="admin">
  <div class="row">
    <div class="col text-left pl-5 pt-3 color-grey">
      <% if !@blog.published %>DRAFT POST: NOT YET PUBLISHED<% end %>
    </div> <!-- col -->
    <div class="col text-right pr-5 pt-3">
      <%= link_to "Edit Blog", edit_blog_path(@blog), class: "btn btn-primary" %>
    </div> <!-- col -->
  </div> <!-- row -->
</section> <!-- admin only -->
<% end %>


<main class="pt-4">


  <div class="container">
    <%= @blog.body.html_safe %>
  </div> <!-- container -->


  <div class="sm-row">
    <div class="container mt-5 py-5">
      <h2 class="text-center color-white pb-3">Share It</h2>
      <div class="row">
        <div class="col">
          <% if @blog.pin_1_url %>
            <%= image_tag @blog.pin_1_url, class: "pin" %>
          <% end %>
        </div> <!-- pin col -->
        <div class="col">
          <% if @blog.pin_2_url %>
            <%= image_tag @blog.pin_2_url, class: "pin" %>
          <% end %>
        </div> <!-- pin col -->
        <div class="col">
          <% if @blog.pin_3_url %>
            <%= image_tag @blog.pin_3_url, class: "pin" %>
          <% end %>
        </div> <!-- pin col -->
        <div class="col">
          <% if @blog.pin_4_url %>
            <%= image_tag @blog.pin_4_url, class: "pin" %>
          <% end %>
        </div> <!-- pin col -->
      </div> <!-- row -->
    </div> <!-- container -->
  </div> <!-- sm row -->



</main>
