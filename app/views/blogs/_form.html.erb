
<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :teaser %>
    <%= f.input :tag_list %>
    <%= f.text_area :body, class: "tinymce", rows: 20, cols: 120 %>
    <%= tinymce_assets %>
    <%= tinymce %>

    <h2 class="text-center mt-5">Publishing Info</h2>
    <%= f.input :published_at %>
    <%= f.input :published, as: :boolean %>

    <h2 class="text-center mt-5">Feature Post As...</h2>
    <%= f.input :big_feature, as: :boolean %>
    <%= f.input :featured, as: :boolean %>
    <%= f.input :most_popular, as: :boolean %>

    <h2 class="text-center mt-5">Images</h2>
    <%= f.input :featured_image_url %>
    <%= f.input :pin_1_url %>
    <%= f.input :pin_2_url %>
    <%= f.input :pin_3_url %>
    <%= f.input :pin_4_url %>
  </div>

  <div class="form-actions text-center py-3">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
